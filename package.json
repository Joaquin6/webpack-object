{
  "name": "webpack-object",
  "version": "0.1.0",
  "description": "adapt webpack configuration object into any webpack version",
  "main": "index.js",
  "bin": "./lib/bin/webpack-object.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Joaquin6/webpack-object.git"
  },
  "keywords": [
    "webpack",
    "config",
    "schema",
    "validation",
    "joi"
  ],
  "author": "Joaquin Briceno <joaquinbriceno1@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Joaquin6/webpack-object/issues"
  },
  "homepage": "https://github.com/Joaquin6/webpack-object#readme",
  "precommit": [
    "lint:staged"
  ],
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm run validate -s"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "directories": {
    "test": "test/"
  },
  "scripts": {
    "commit": "git-cz",
    "dev": "babel src -d lib -w",
    "prebuild": "rimraf lib",
    "build": "babel -d lib src",
    "postinstall": "npm run build",
    "test": "cross-env NODE_ENV=test NODE_PATH=./src mocha \"test/**/*.test.js\"",
    "watch:test": "cross-env DEBUG=webpack-object:* npm run test -- -w",
    "lint": "eslint src/; eslint test/",
    "lint:fix": "eslint --fix src/; eslint --fix test/",
    "lint:staged": "git diff --cached --name-only -- src/ test/ bin/ | egrep \"\\\\.js$\" | xargs -L1 eslint",
    "cover": "cross-env NODE_ENV=test NODE_PATH=./src nyc mocha \"test/**/*.test.js\"",
    "dev:inspect": "node-inspector & node -r babel-register --inspect-brk ./index.js",
    "report-coverage": "cat ./coverage/lcov.info | node_modules/.bin/codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "validate": "npm-run-all --parallel lint cover build test --sequential check-coverage",
    "check-coverage": "nyc check-coverage"
  },
  "dependencies": {
    "ajv": "^6.4.0",
    "ajv-keywords": "^3.1.0",
    "basename": "^0.1.2",
    "buglog": "^1.0.0",
    "chalk": "^2.3.2",
    "commander": "^2.15.1",
    "cross-env": "^5.1.4",
    "enhanced-resolve": "^4.0.0",
    "find-node-modules": "^1.0.4",
    "fs-extra": "^5.0.0",
    "joi": "^13.1.2",
    "lodash": "^4.17.5",
    "npmlog": "^4.1.2",
    "shelljs": "^0.8.1",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-espower": "2.3.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-power-assert": "^2.0.0",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^2.9.6",
    "common-tags": "^1.7.2",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "4.5.1",
    "cz-conventional-changelog": "^2.1.0",
    "directory-named-webpack-plugin": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "ghooks": "^2.0.2",
    "glob": "^7.1.2",
    "html-webpack-plugin": "3.2.0",
    "intelli-espower-loader": "^1.0.1",
    "mocha": "^5.0.5",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.6.0",
    "path-here": "^1.1.1",
    "power-assert": "^1.5.0",
    "semantic-release": "^15.1.5",
    "semver": "^5.5.0",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "validate-commit-msg": "^2.14.0",
    "webpack": "4.5.0",
    "webpack-md5-hash": "^0.0.6",
    "webpack-notifier": "1.6.0",
    "with-package": "^1.0.2"
  }
}
